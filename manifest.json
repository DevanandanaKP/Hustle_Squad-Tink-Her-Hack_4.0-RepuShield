{
  "manifest_version": 3,
  "name": "HerDefend",
  "version": "1.0",
  "description": "Women-Centric Digital Safety Guardian with YouTube toxic comment filtering.",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://*.youtube.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "ui.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://*.youtube.com/*",
        "https://www.google.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "ui.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}